{
    "variables": {
        "mirror": "http://mirrors.kernel.org/archlinux",
        "version": "2018.12.01",
        "wait": "60s"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "ArchLinux_64",
        "guest_additions_mode": "disable",
        "iso_url": "{{user `mirror`}}/iso/{{user `version`}}/archlinux-{{user `version`}}-x86_64.iso",
        "iso_checksum_url": "{{user `mirror`}}/iso/{{user `version`}}/sha1sums.txt",
        "iso_checksum_type": "sha1",
        "boot_command": [
            "<enter><wait{{user `wait`}}>",
            "echo PermitEmptyPasswords yes >> /etc/ssh/sshd_config<enter><wait>",
            "systemctl start sshd<enter><wait>"
        ],
        "ssh_timeout": "1m",
        "ssh_username": "root",
        "ssh_password": "",
        "shutdown_command": "systemctl poweroff"
    }],

    "provisioners": [{
        "type": "shell",
        "scripts": [
            "install/10-partition.sh",
            "install/20-format.sh",
            "install/30-mount.sh",
            "install/40-mirrors.sh",
            "install/50-install.sh",
            "install/60-fstab.sh"
        ],
        "environment_vars": ["mirror={{user `mirror`}}"]
    }, {
        "type": "shell",
        "scripts": [
            "install/setup.sh",
            "provision/virtualbox.sh",
            "provision/ssh.sh",
            "provision/pacman.sh"
        ],
        "execute_command": "cp '{{.Path}}' /mnt/tmp.sh && arch-chroot /mnt /tmp.sh && rm /mnt/tmp.sh"
    }],

    "post-processors": [{
        "type": "vagrant",
        "output": "archlinux-minimal-{{.Provider}}.box"
    }]
}
