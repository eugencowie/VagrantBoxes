{
    "variables": {
        "mirror": "http://alpha.us.repo.voidlinux.org",
        "version": "20181111",
        "arch": "x86_64"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "Linux_64",
        "guest_additions_mode": "disable",
        "iso_url": "{{user `mirror`}}/live/{{user `version`}}/void-live-{{user `arch`}}-{{user `version`}}.iso",
        "iso_checksum_url": "{{user `mirror`}}/live/{{user `version`}}/sha256sums.txt",
        "iso_checksum_type": "sha256",
        "headless": "true",
        "ssh_timeout": "1m",
        "ssh_username": "root",
        "ssh_password": "voidlinux",
        "shutdown_command": "poweroff"
    }],

    "provisioners": [{
        "type": "shell",
        "script": "install/base.sh",
        "environment_vars": ["mirror={{user `mirror`}}", "arch={{user `arch`}}"]
    }, {
        "type": "shell",
        "scripts": [
            "install/grub.sh",
            "install/vagrant.sh",
            "install/virtualbox.sh"
        ],
        "environment_vars": "arch={{user `arch`}}",
        "execute_command": "cp {{.Path}} /mnt/tmp.sh && {{.Vars}} chroot /mnt /tmp.sh && rm /mnt/tmp.sh"
    }],

    "post-processors": [{
        "type": "vagrant",
        "output": "voidlinux-{{user `arch`}}-{{.Provider}}.box"
    }]
}
