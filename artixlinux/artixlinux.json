{
    "variables": {
        "version": "openrc-20181013",
        "boot": "90s"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "ArchLinux_64",
        "guest_additions_mode": "disable",
        "iso_url": "https://download.artixlinux.org/iso/artix-base-{{user `version`}}-x86_64.iso",
        "iso_checksum_url": "https://download.artixlinux.org/iso/sha256sums",
        "iso_checksum_type": "sha256",
        "headless": "true",
        "boot_command": [
            "<down><down><enter><wait{{user `boot`}}>",
            "root<enter><wait>artix<enter><wait>",
            "echo PermitRootLogin yes >> /etc/ssh/sshd_config<enter><wait>",
            "rc-service sshd start<enter><wait>"
        ],
        "ssh_timeout": "1m",
        "ssh_username": "root",
        "ssh_password": "artix",
        "shutdown_command": "poweroff"
    }],

    "provisioners": [{
        "type": "shell",
        "script": "install/base.sh"
    }, {
        "type": "shell",
        "scripts": [
            "install/grub.sh",
            "install/vagrant.sh",
            "install/virtualbox.sh",
            "install/pacman.sh"
        ],
        "execute_command": "cp {{.Path}} /mnt/tmp.sh && {{.Vars}} artools-chroot /mnt /tmp.sh && rm /mnt/tmp.sh"
    }],

    "post-processors": [{
        "type": "vagrant",
        "output": "artixlinux-{{.Provider}}.box"
    }]
}
